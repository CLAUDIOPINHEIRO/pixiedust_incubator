{
  "metadata": {
    "pixiedust": {
      "codegen_variables": [
        { "id":"schema", "label":"Table Schema Name", "type":"text" },
        { "id":"prefix", "label":"Table Name Prefix", "type":"text" },
        { "id":"table", "label":"Table Name", "type":"text" },
        { "id":"username", "label":"User Name", "type":"text" },
        { "id":"password", "label":"Password", "type":"password" },
        { "id":"host", "label":"dashDB Host", "type":"text" }
      ]
    }
  },
 "cells": [
    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "SCHEMA=\"{schema}.\"\n",
        "PREFIX=\"{prefix}_\"\n",
        "props = {}\n",
        "props['user'] = '{username}'\n",
        "props['password'] = '{password}'\n",
        "jdbcurl='jdbc:db2://{host}:50000/BLUDB'\n",
        "#get the data frame\n",
        "df = sqlContext.read.jdbc(jdbcurl, SCHEMA+PREFIX+'{table}', properties=props)\n",
        "df.printSchema()\n"
      ]
    }
  ]
}